---
import '../../client/src/index.css';

interface Props {
  title: string;
  description?: string;
}

const {
	title,
	description = "Trapped in Beppo's nightmare circus tent labyrinth. Navigate to escape before your sanity runs out.",
} = Astro.props;

// Get the base URL for proper asset pathing
const base = import.meta.env.BASE_URL || '/';
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- PWA/Mobile optimizations -->
    <meta name="theme-color" content="#0a0a0a" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    
    <!-- Horror fonts - preload for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Butcherman&family=Creepster&family=Eater&family=Nosifer&family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${base}og-image.png`} />
    <meta property="og:site_name" content="Beppo Laughs" />
    <title>{title}</title>
    
    <!-- Critical inline styles for immediate paint -->
    <style is:inline>
      /* Prevent FOUC and ensure fullscreen from start */
      html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        position: fixed;
        overscroll-behavior: none;
      }
      
      /* Ensure React root takes full viewport */
      #app {
        width: 100%;
        height: 100%;
        position: relative;
      }
      
      /* Prevent mobile browser chrome issues */
      body {
        -webkit-overflow-scrolling: touch;
        -webkit-user-select: none;
        user-select: none;
        touch-action: none;
      }
      
      /* Loading state */
      .loading {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        background: #0a0a0a;
        color: #8b0000;
        font-family: 'Creepster', cursive;
        font-size: 2rem;
      }
    </style>
  </head>
  <body>
    <div id="app">
      <slot />
    </div>
  </body>
</html>

<style>
  /* Additional styles that don't need to be inline */
  :global(canvas) {
    display: block;
    width: 100%;
    height: 100%;
    touch-action: none;
  }
</style>
